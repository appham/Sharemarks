<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardMarkItem"
    style="@style/CardMarkItem"
    card_view:cardElevation="4dp"
    card_view:contentPadding="4dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layMarkItem"
                    style="@style/LayoutMarkItem">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/TextMarkTitle"/>

        <LinearLayout
            android:id="@+id/layMarkContent"
            style="@style/LayoutMarkContent">

            <ImageView
                android:id="@+id/imgMark"
                android:src="@drawable/ic_menu_gallery"
                style="@style/ImageMark"/>

            <TextView
                android:id="@+id/txtContent"
                android:text=""
                style="@style/TextMarkContent"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtReferrer"
            style="@style/TextMarkReferrer"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
